<div class="d-flex justify-content-between align-items-center">
    <h1>Welcome @Context.Session.GetString("Name")</h1>
    <div><a asp-action="LogOut" class="btn btn-danger border">Log out</a></div>
</div>
<hr/>

<div class="d-flex justify-content-center align-items-center">
    <div>
        <h1>Number: @Context.Session.GetInt32("Number")</h1>
        <div class="d-flex flex-column gap-3 ">
            <div class="d-flex justify-content-center gap-3">
                <a href="/modifyNumber/+1">
                    <button class="modifiers btn btn-warning border border-dark">+1</button>
                </a>
                <a href="/modifyNumber/-1">
                    <button class="modifiers btn btn-primary border border-dark">-1</button>
                </a>                
            </div>
            <div class="d-flex justify-content-center gap-3">
                <a href="/modifyNumber/x2"><button class="modifiers btn btn-danger border border-dark">x2</button></a>
                <a href="/modifyNumber/rand"><button class="modifiers btn btn-success border border-dark">+ Random</button></a>
            </div>
            <hr/>
            <h2 class="d-flex justify-content-center"><u>Method 2:</u></h2>
            <div class="d-flex justify-content-center gap-3">
                <a asp-action="ModifyNumber2" asp-route-modifier="+1"><button class="modifiers btn btn-warning border border-dark">+1</button></a>
                <a asp-action="ModifyNumber2" asp-route-modifier="-1"><button class="modifiers btn btn-primary border border-dark">-1</button></a>
            </div>
            <div class="d-flex justify-content-center gap-3">
                <a asp-action="ModifyNumber2" asp-route-modifier="x2"><button class="modifiers btn btn-danger border border-dark">x2</button></a>
                <a asp-action="ModifyNumber2" asp-route-modifier="rand"><button class="modifiers btn btn-success border border-dark">+ Random</button></a>
            </div>
            <div class="d-flex justify-content-center">
                <a asp-action="ResetNum"><button class="btn btn-info">Reset Number to 0</button></a>
            </div>
        </div>
    </div>

</div>